<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="vk_blue">#3d8cd4</color>
    <color name="vk_navy">#cc006fc8</color>
    <color name="vk_navy_solid">#ff006fc8</color>
    <color name="vk_white_trans">#aaffffff</color>
    <color name="hi_blue">#e133b5e5</color>
    <color name="hi_gray">#ff787878</color>        
    <color name="color_sel_trans">#4b33b5e5</color>
	<color name="holo_blue_light">#ff33b5e5</color>
	<color name="holo_blue_bright">#ff00ddff</color>
    
    <style name="Theme.Arcanum" parent="@style/Theme.AppCompat.Light" >
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:actionBarSize">56dp</item>
		<item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:editTextStyle">@style/EditTextAppTheme</item>		
		<item name="android:progressBarStyleHorizontal">@style/ProgressBarAppTheme</item>
		<item name="android:popupMenuStyle">@style/PopupMenu</item>
		<item name="android:colorPressedHighlight">@color/holo_blue_light</item>
    	<item name="android:colorLongPressedHighlight">@color/holo_blue_bright</item>	
    	<item name="android:checkboxStyle">@style/CheckBox</item>	
	
		<item name="windowActionBarOverlay">true</item>
		<item name="actionBarSize">56dp</item>
		<item name="actionBarStyle">@style/ActionBar</item>
		<item name="popupMenuStyle">@style/PopupMenu</item>
		
		<item name="android:typeface">sans</item>
		<item name="android:itemTextAppearance">@style/PopupTextAppearance</item>		
	</style>
	
    
    <style name="Theme.Arcanum.Black" parent="Theme.Arcanum" >
		<item name="android:popupMenuStyle">@style/PopupBlackMenu</item>	
		<item name="popupMenuStyle">@style/PopupBlackMenu</item>
		<item name="android:itemTextAppearance">@style/PopupBlackTextAppearance</item>		
	</style>    
    
    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/header</item>
		<item name="background">@drawable/header</item>      
    </style> 
    
	<style name="EditTextAppTheme" parent="@android:Widget.EditText">
		<item name="android:background">@drawable/edit_text_holo_light</item>
		<item name="android:textColor">#000000</item>
	</style>
	
	<style name="ProgressBarAppTheme" parent="@android:Widget.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
		<item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
		<item name="android:minHeight">16dip</item>
		<item name="android:maxHeight">16dip</item>
	</style>    
	
	<style name="PopupMenu" parent="android:Widget.ListPopupWindow">
		<item name="android:popupBackground">@drawable/popup</item>
	</style>	
    
 	<style name="PopupTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#006fc8</item>
    </style>	
	 	
	<style name="PopupBlackMenu" parent="android:Widget.ListPopupWindow">
		<item name="android:popupBackground">@drawable/popup_black</item>
	</style>
	
 	<style name="PopupBlackTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
    </style>	
 	
	<style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
		<item name="android:button">@null</item>
		<item name="android:drawableRight">@drawable/check_box</item>	 
		<item name="android:textColor">@drawable/txt_black</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
		<item name="android:paddingLeft">8dp</item>			
		<item name="android:gravity">left|center</item>	    
	</style>
	
    <style name="sectionHeader" parent="@android:Widget.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>    
    
    <style name="settingsHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:drawableBottom">@drawable/settings_header</item>        
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">left</item>	 
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/vk_blue</item>
        <item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
    </style>

    <style name="categoryHeader" parent="settingsHeader">
        <item name="android:drawableBottom">@drawable/category_header</item>
        <item name="android:textSize">18sp</item>    
    </style>    
    
	<style name="buttonNext" parent="@android:Widget.Button">
		<item name="android:drawableRight">@drawable/ic_auth_next</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:text">@string/auth_btn_next</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#006fc8</item>
	</style>
	
	<style name="buttonOption" parent="@android:Widget.Button">
	    <item name="android:textColor">@drawable/txt_black</item>
	    <item name="android:background">@drawable/btn_option</item>
	    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
	    <item name="android:paddingLeft">8dp</item>
	    <item name="android:gravity">left|center</item>	    
	</style>
	
	<style name="buttonMsg" parent="@android:Widget.TextView">
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>	    
		<item name="android:layout_centerVertical">true</item>
	    <item name="android:textColor">@drawable/bmsg_btn_text</item>
	    <item name="android:background">@drawable/bmsg_btn</item>
	    <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
	    <item name="android:paddingLeft">12dp</item>
	    <item name="android:paddingRight">12dp</item>
	    <item name="android:paddingTop">8dp</item>
	    <item name="android:paddingBottom">8dp</item>
	    <item name="android:clickable">true</item>	  
	    <item name="android:gravity">center</item>	    
	    <item name="android:textStyle">bold</item>
	</style>		
		
	<style name="buttonMenu">
	    <item name="android:layout_width">54dp</item>     
    	<item name="android:layout_height">match_parent</item>
    	<item name="android:layout_marginBottom">2dp</item>
		<item name="android:clickable">true</item> 
		<item name="android:scaleType">centerInside</item>
		<item name="android:background">@drawable/btn_done_color</item>
		<item name="android:onClick">onMenuClick</item>
	</style>
	
	<style name="buttonMenuGray" parent="buttonMenu">
		<item name="android:background">@drawable/btn_done_color_gray</item>
	</style>	
		
</resources>