<?xml version="1.0" encoding="utf-8"?>
<com.xproger.arcanum.PageGroupNewTitle xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingTop="64dp"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_marginTop="8dp" >

	    <ImageView
	        android:id="@+id/picture"
	        android:layout_alignParentLeft="true"
	        android:layout_width="96dp"
	        android:layout_height="96dp"
	        android:src="@drawable/group_placeholder"
	        android:contentDescription="@string/none" />
	    
		<ImageView
	        android:id="@+id/spinner"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_alignRight="@id/picture"
		    android:layout_alignBottom="@id/picture"
	        android:clickable="false"
	        android:src="@drawable/photo_edit_spinner"
	        android:contentDescription="@string/none" />		    
	    
	    <EditText
	        android:id="@+id/title"
	        android:layout_toRightOf="@id/picture"
	        android:layout_centerVertical="true"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"
	        android:layout_marginLeft="8dp"
            android:maxLines="4"
	        android:ems="10"
	        android:hint="@string/hint_group_title"
	        android:inputType="textMultiLine|textPersonName" />	    

	</RelativeLayout>

</com.xproger.arcanum.PageGroupNewTitle>
